<div class="container d-flex justify-content-center align-items-start mt-4">
  <div class="card shadow-lg p-3 border-0 rounded-4 text-center" style="max-width: 400px; width: 100%;">
    <div class="mb-2">
      <i class="bi bi-person-circle text-primary" style="font-size: 3.5rem;"></i>
    </div>
    
    <h2 class="fw-bold text-dark mb-2">Welcome, <%= @user.name %>!</h2>
    
    <div class="mt-2">
      <p class="text-muted mb-1"><i class="bi bi-envelope-fill text-primary"></i> <strong>Email:</strong> <%= @user.email %></p>
      <p class="text-muted mb-2"><i class="bi bi-person-badge-fill text-success"></i> <strong>Role:</strong> <span class="badge bg-secondary"><%= @user.role.capitalize %></span></p>
    </div>

    <!-- Logout Button -->
    <div class="mt-3">
      <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-danger px-4", data: { turbo_confirm: "Are you sure you want to log out?" } %>
    </div>
  </div>
</div>
