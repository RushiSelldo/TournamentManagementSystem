<h4 class="fw-bold mb-3 text-primary">üèÜ My Tournaments</h4>
<div class="table-responsive">
  <table class="table table-hover align-middle shadow-sm rounded-3 overflow-hidden">
    <thead class="table-dark">
      <tr>
        <th class="py-3">Name</th>
        <th class="py-3">Date</th>
        <th class="py-3">Location</th>
        <th class="py-3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tournaments.each do |tournament| %>
        <% if policy(tournament).show? %>
          <tr class="align-middle">
            <td class="fw-semibold text-start px-4"><%= tournament.name %></td>
            <td class="text-center"><%= tournament.start_date.strftime("%d %b %Y") %></td>
            <td class="text-center"><%= tournament.location %></td>
            <td class="text-center">
              <div class="btn-group">
                <%= link_to "View", host_tournament_path(tournament), class: "btn btn-outline-info btn-sm px-3 me-2" %>
                <% if policy(tournament).edit? %>
                  <%= link_to "Edit", edit_host_tournament_path(tournament), class: "btn btn-outline-warning btn-sm px-3 me-2" %>
                <% end %>
                <% if policy(tournament).destroy? %>
                  <%= button_to "Delete", host_tournament_path(tournament), method: :delete, 
                    data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm px-3" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
