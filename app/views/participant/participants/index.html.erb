<h2>🏆 My Joined Tournaments</h2>

<% if @joined_tournaments.any? %>
  <div class="list-group">
    <% @joined_tournaments.each do |tournament| %>
      <a href="<%= matches_participant_participant_path(tournament.id) %>" class="list-group-item list-group-item-action">
        <strong><%= tournament.name %></strong> - Starts on <%= tournament.start_date.strftime("%B %d, %Y") %>
      </a>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">You haven't joined any tournaments yet.</p>
<% end %>
